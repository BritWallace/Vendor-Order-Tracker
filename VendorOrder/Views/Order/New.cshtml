
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor Order Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    @* @using VendorOrder.Models *@
  </head>
  <body>
    <h1>Add a new order to @Model.Name</h1>
    <form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderName">Add the for the new order:</label>
  <input id="orderName" name="orderName" type="text">
  <br>
  <label for="orderDescription">Add a description for the new order:</label>
  <input id="orderDescription" name="orderDescription" type="text">
  <br>
  <label for="orderPrice">Add the price for the new order:</label>
  <input id="orderPrice" name="orderPrice" type="number">
  <br>
  <label for="orderDate">Add the date for the order:</label>
  <input id="orderDate" name="orderDate" type="date">
  <br>
  <br>
  <button type="submit">Add Order</button>
</form>
    <p><a href="/">Home Page</a></p>
    <p><a href="/vendors">Vendor Page</a></p>
  </body>
</html>
